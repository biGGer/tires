{% extends "TireBundle::template.html.twig" %}

{% block body -%}
<ul class="nav nav-tabs" style="margin-top: 80px;">
</ul>
    <h4>Список шин</h4>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Производитель</th>
                <th>Модель</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.manufacturer }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tire_edit', { 'id': entity.id }) }}">Просмотр</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tire_new') }}">
                Добавить
            </a>
        </li>
    </ul>
    {% endblock %}
