{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список меток</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Широта </th>
                <th>Долгота</th>
                <th>Тип</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('point_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('point_show', { 'id': entity.id }) }}">просмотр</a>
                    </li>
                    <li>
                        <a href="{{ path('point_edit', { 'id': entity.id }) }}">редактирование</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('point_new') }}">
                Добавить запись
            </a>
        </li>
    </ul>
    {% endblock %}
